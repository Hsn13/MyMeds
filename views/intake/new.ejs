<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Log Intake — MyMeds</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../navbar') %>

  <main class="main-content">
    <div class="page-header">
      <h1>Log Intake</h1>
      <a href="/intake" class="btn btn-secondary">← Back to Calendar</a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="form-container">
      <form action="/intake" method="POST">
        <div class="form-group">
          <label for="medicationId">Medication <span class="required">*</span></label>
          <select name="medicationId" id="medicationId" required>
            <option value="" disabled>Select a medication</option>
            <% medications.forEach(med => { %>
              <option value="<%= med._id %>" <%= selectedMedicationId && med._id.toString() === selectedMedicationId ? 'selected' : '' %>>
                <%= med.name %> (<%= med.dosage %>)
              </option>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label for="date">Date <span class="required">*</span></label>
          <input type="date" name="date" id="date" value="<%= selectedDate %>" required>
        </div>
        <div class="form-group">
          <label for="status">Status <span class="required">*</span></label>
          <select name="status" id="status" required>
            <option value="" disabled selected>Select status</option>
            <option value="taken">✓ Taken</option>
            <option value="missed">✗ Missed</option>
            <option value="late">⏰ Late</option>
          </select>
        </div>
        <div class="form-group">
          <label for="notes">Notes</label>
          <textarea name="notes" id="notes" rows="2" placeholder="Any additional notes..."></textarea>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Log</button>
          <a href="/intake?date=<%= selectedDate %>" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
